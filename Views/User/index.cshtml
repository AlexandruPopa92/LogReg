@model User
<!doctype <!DOCTYPE html>
<html>
<head>
    <title>LogIn and Registration </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/style.css" />
</head>
<body>
    <div class="container">
        <p class="toplink"><a href="/login">Already Registered?</a></p>
        <div class="registration">
            <form asp-action="Register" class="form-horizontal" asp-controller="User" method="POST">
                <h3>Register here!</h3>
                <div class="form-group">
                    <label asp-for="FirstName">First Name:</label>
                    <input asp-for="FirstName" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="FirstName" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name:</label>
                    <input asp-for="LastName" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="LastName" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="Email" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="Password" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirm">Confirm Password:</label>
                    <input asp-for="Confirm" class="form-control" aria-describedby="emailHelp">
                    <span asp-validation-for="Confirm" class="error"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register!</button>
            </form>
            
        </div>
       
    </div>
</body>
</html>